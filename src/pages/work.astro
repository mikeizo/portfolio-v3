---
import { getDataFeed } from '@/utils/api'

import Layout from '@/layouts/Layout.astro'
import PageWrapper from '@/components/pages/PageWrapper.astro'
import WorkList from '@/components/pages/work/WorkList.vue'

const env = import.meta.env
const assetsPath = env.PUBLIC_ASSETS_PATH
const workData = await getDataFeed('work', 'weight')
---

<Layout>
  <PageWrapper title="My Work" className="work">
    <WorkList path={assetsPath} data={workData || []} client:load />
  </PageWrapper>
</Layout>
